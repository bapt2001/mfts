{
    "verbose": true,
    "transform": {
        "^.+\\.(ts|tsx|js)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": ["<rootDir>/node_modules/(?!lodash-es/.*)"],
    "testMatch": ["**/__tests__/*.+(ts|tsx|js)"],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
    "moduleNameMapper": {
        "^.+\\.scss$": "identity-obj-proxy",
        "@src/(.*)$": "<rootDir>/src/js/$1",
        "@config/(.*)$": "<rootDir>/src/config/$1",
        "@assets/(.*)$": "<rootDir>/src/assets/$1",
        "@thirdparty/(.*)$": "<rootDir>/src/thirdparty/$1",
        "@data/(.*)$": "<rootDir>/src/data/$1"
    },
    "globals": {
        "window": {},
        "ts-jest": {
            "tsConfigFile": "tsconfig.jest.json"
        }
    },
    "setupFiles": ["./jest.stubs.js"],
    "setupTestFrameworkScriptFile": "./jest.tests.js",
    "collectCoverageFrom": ["src/**/*.+(ts|tsx|js|jsx)", "!src/__tests__/*"]
}
